---
interface Props {
  title: string;
  img: string;
  class?: string;
}

const { title, img, class: className } = Astro.props;
---

<article class:list={["relative group overflow-hidden rounded-lg bg-slate-800/55 border border-slate-700/50", className]}>
  <div class="relative aspect-video overflow-hidden">
    <img 
      src={img} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-5 lg:p-6">
    <h3 class="text-lg sm:text-xl lg:text-2xl font-bold text-white mb-2 sm:mb-3">{title}</h3>
    <p class="text-sm sm:text-base lg:text-lg text-gray-300">
      <slot />
    </p>
  </div>
</article>
