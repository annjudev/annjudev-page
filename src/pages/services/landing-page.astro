---
import Layout from '../../layouts/Layout.astro';
import SectionContainer from '../../components/SectionContainer.astro';

const service = {
  name: 'Diseño de Landing Pages Profesionales',
  description: 'Desarrollo de landing page personalizada basada en tus preferencias y necesidades. Incluye: Diseño responsivo y moderno, optimización SEO, formularios de contacto, integración con redes sociales, análisis de Google Analytics, optimización de velocidad y entrega garantizada en máximo 3 semanas. Trabajamos contigo para crear la página web perfecta que represente tu marca.',
  features: [
    'Diseño responsivo y moderno',
    'Optimización SEO',
    'Formularios de contacto',
    'Integración con redes sociales',
    'Análisis de Google Analytics',
    'Optimización de velocidad',
    'Entrega garantizada en máximo 3 semanas'
  ]
}
---

<Layout title={`${service.name} - Juan Ramírez`}>
  <SectionContainer class="pt-24 sm:pt-40 pb-24">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="flex items-center gap-4 mb-8 sm:mb-12">
          <a href="/" class="text-yellow-500 hover:text-yellow-400 transition-colors text-base sm:text-lg">
            ← Volver
          </a>
          <div class="size-6 sm:size-7 rounded-full border border-yellow-500 bg-yellow-500"></div>
        </div>
        
        <h1 class="text-4xl sm:text-5xl font-bold text-yellow-500 mb-6 sm:mb-8">{service.name}</h1>
        
        <div class="prose prose-invert max-w-none">
          <p class="text-lg sm:text-xl text-slate-300 mb-8 sm:mb-12 leading-relaxed">{service.description}</p>
          
          <h2 class="text-2xl sm:text-3xl font-bold text-yellow-500 mb-6 sm:mb-8">Características incluidas:</h2>
          <ul class="space-y-4 sm:space-y-5">
            {service.features.map(feature => (
              <li class="flex items-center gap-3 text-slate-300 text-base sm:text-lg">
                <span class="size-2 sm:size-2.5 rounded-full bg-yellow-500"></span>
                {feature}
              </li>
            ))}
          </ul>
        </div>

        <div class="mt-12 sm:mt-16 flex justify-center">
          <a 
            href="mailto:Juanchoramirez2001@gmail.com" 
            class="inline-flex items-center px-6 sm:px-8 py-3 sm:py-4 text-lg sm:text-xl font-medium border rounded-lg focus:z-10 focus:outline-none bg-green-600 border-green-700 text-white hover:bg-green-700 transition-colors duration-300"
          >
            Solicitar cotización
          </a>
        </div>
      </div>
    </div>
  </SectionContainer>
</Layout>

<style>
  /* View Transitions API */
  @keyframes fade-in {
    from { opacity: 0; }
  }
  @keyframes fade-out {
    to { opacity: 0; }
  }
  @keyframes slide-from-right {
    from { transform: translateX(30px); }
  }
  @keyframes slide-to-left {
    to { transform: translateX(-30px); }
  }
  @keyframes slide-from-left {
    from { transform: translateX(-30px); }
  }
  @keyframes slide-to-right {
    to { transform: translateX(30px); }
  }

  ::view-transition-old(root) {
    animation: 90ms cubic-bezier(0.4, 0, 1, 1) both fade-out, slide-to-left;
  }

  ::view-transition-new(root) {
    animation: 90ms cubic-bezier(0, 0, 0.3, 1) 90ms both fade-in, slide-from-right;
  }

  /* Ensure images maintain aspect ratio */
  img {
    aspect-ratio: 16/9;
    object-fit: cover;
  }
</style> 